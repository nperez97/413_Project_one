@{ ViewData["Title"] = "View Appointments";
}

@model IEnumerable<_413_Project_one.Models.Group>

<h1 class="text-center">Scheduled Tours</h1>
<div class="cards">
    <div class="card">
        <div class="card-body">
            <table class="table table-hover" style="width: 70vw; margin-bottom: 0;">
                <thead>
                    <tr>
                        <th class="text-center">Group Name</th>
                        <th class="text-center">Group Size</th>
                        <th class="text-center">Group Contact Email</th>
                        <th class="text-center">Group Phone Number</th>
                        <th class="text-center">Appointment Date</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="3" class="text-center">No Scheduled Tours</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var x in Model)
                        {
                <tr>
                    <td class="text-center">@x.GroupName</td>
                    <td class="text-center">@x.GroupSize</td>
                    <td class="text-center">@x.GroupContactEmailAddress</td>
                    <td class="text-center">@x.GroupContactPhoneNumber</td>
                    <td class="text-center">@x.GroupAppointmentTime</td>
                </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
