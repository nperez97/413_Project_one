<body>
    @RenderSection("Carosel", required: false)
    <header style="flex-direction: column;">
        <div class="menu-bar">
            <div class="hamburger">

                <svg viewBox="0 0 32 32">
                    <use xlink:href="#hamburger-menu" />
                </svg>
            </div>
            <nav>
                <ul>
                    <li><a class="li-hover" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="li-hover" asp-controller="Home" asp-action="NewAppointment">Sign Up</a></li>
                    <li><a class="li-hover" asp-controller="Home" asp-action="ViewAppointments">View Appointments</a></li>
                    <li><a class="li-hover" target="_blank" href="https://churchofjesuschristtemples.org/layton-utah-temple/">Temple Info</a></li>
                    <li><a class="li-hover" target="_blank" href="https://churchofjesuschrist.org">Learn More</a></li>
                </ul>

                <div class="close">
                    <svg viewBox="0 0 32 32">
                        <use xlink:href="#close-icon" />
                    </svg>
                </div>
            </nav>
        </div>
        <svg class="svg-info" xmlns="http://www.w3.org/2000/svg">

            <symbol id="hamburger-menu">
